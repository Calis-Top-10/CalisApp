<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/custom_button_ripple_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/children_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/custom_button_ripple_2"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/baca"
            android:transitionName="story_image"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/children_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:layout_marginVertical="5dp"
            android:textColor="@color/frame1"
            android:textSize="30sp"
            android:textStyle="bold"
            android:transitionName="user_name"
            tools:text="@string/BACA" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
