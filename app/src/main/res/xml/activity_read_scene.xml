<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000"
        motion:autoTransition="animateToEnd">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/imageLevel1"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="325dp"
            android:layout_height="325dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toTopOf="@id/frameLayout1" />
        <Constraint
            android:id="@+id/frameLayout1"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent" />
        <Constraint
            android:id="@+id/backward"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintDimensionRatio="1:1"
            android:padding="17dp"
            android:src="@drawable/backward"
            android:background="@drawable/menu1"
            motion:layout_constraintTop_toTopOf="@id/horizontal1"
            motion:layout_constraintStart_toStartOf="@id/vertical1"
            motion:layout_constraintEnd_toEndOf="@id/vertical2"
            android:contentDescription="@string/backward" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/imageLevel1"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="325dp"
            android:layout_height="325dp"
            motion:layout_constraintBottom_toTopOf="@+id/frameLayout1"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/frameLayout1"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            motion:layout_constraintBottom_toBottomOf="parent" />
        <Constraint
            android:id="@+id/backward"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintDimensionRatio="1:1"
            android:padding="17dp"
            android:src="@drawable/backward"
            android:background="@drawable/menu1"
            motion:layout_constraintTop_toTopOf="@id/horizontal1"
            motion:layout_constraintStart_toStartOf="@id/vertical1"
            motion:layout_constraintEnd_toEndOf="@id/vertical2"
            android:contentDescription="@string/backward" />
        <Constraint
            android:id="@+id/background"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent" >
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="@color/palette1" />
        </Constraint>
    </ConstraintSet>
    <ConstraintSet android:id="@+id/level2" >
        <Constraint
            android:id="@+id/imageLevel1"
            android:layout_width="325dp"
            android:layout_height="325dp"
            motion:layout_constraintBottom_toTopOf="@+id/frameLayout1"
            motion:layout_constraintEnd_toStartOf="parent" />
        <Constraint
            android:id="@+id/frameLayout1"
            android:layout_width="325dp"
            android:layout_height="90dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="parent" />
        <Constraint
            android:id="@+id/imageLevel2"
            android:layout_width="325dp"
            android:layout_height="325dp"
            motion:layout_constraintBottom_toTopOf="@id/frameLayout2"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/frameLayout2"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/backward"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintDimensionRatio="1:1"
            android:padding="17dp"
            android:src="@drawable/backward"
            android:background="@drawable/menu1"
            motion:layout_constraintTop_toTopOf="@id/horizontal1"
            motion:layout_constraintStart_toStartOf="@id/vertical1"
            motion:layout_constraintEnd_toEndOf="@id/vertical2"
            android:contentDescription="@string/backward"  />
        <Constraint
            android:id="@+id/background"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent" >
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="@color/palette2" />
        </Constraint>
    </ConstraintSet>
    <Transition
        motion:constraintSetStart="@+id/end"
        motion:constraintSetEnd="@+id/level2" >
        <OnSwipe motion:dragDirection="dragLeft" />
    </Transition>
    <ConstraintSet android:id="@+id/level3" >
        <Constraint
            android:id="@+id/imageLevel2"
            android:layout_width="325dp"
            android:layout_height="325dp"
            motion:layout_constraintBottom_toTopOf="@id/frameLayout2"
            motion:layout_constraintEnd_toStartOf="parent" />
        <Constraint
            android:id="@+id/frameLayout2"
            android:layout_width="325dp"
            android:layout_height="90dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="parent" />
        <Constraint
            android:id="@+id/imageLevel3"
            android:layout_width="325dp"
            android:layout_height="325dp"
            motion:layout_constraintBottom_toTopOf="@id/frameLayout3"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/frameLayout3"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/backward"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintDimensionRatio="1:1"
            android:padding="17dp"
            android:src="@drawable/backward"
            android:background="@drawable/menu1"
            motion:layout_constraintTop_toTopOf="@id/horizontal1"
            motion:layout_constraintStart_toStartOf="@id/vertical1"
            motion:layout_constraintEnd_toEndOf="@id/vertical2"
            android:contentDescription="@string/backward" />
        <Constraint
            android:id="@+id/background"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/background"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent">
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="@color/palette3" />
        </Constraint>
    </ConstraintSet>
    <Transition
        motion:constraintSetStart="@+id/level2"
        motion:constraintSetEnd="@+id/level3" >
        <OnSwipe motion:dragDirection="dragLeft" />
    </Transition>
</MotionScene>